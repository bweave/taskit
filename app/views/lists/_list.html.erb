<div id="list_wrap_<%= list.id %>" class="list-wrap">
  <div class="header">
    <h3 class="list-name"><%= list.name %></h3>
    <div class="actions">
      <%= link_to edit_list_path(list.id), remote: true, data: {open: 'edit-list-modal'}  do %>
        <i class="fa fa-pencil"></i>
      <% end %>
      <%= link_to list_path(list.id), method: 'DELETE', remote: true, confirm: 'Are you sure?' do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  </div>
  <div class="list"></div>
  <div class="new-card">
    <%= render 'cards/form', list: list %>
  </div>
</div>
